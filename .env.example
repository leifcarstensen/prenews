# Database (Postgres)
DATABASE_URL=postgresql://user:password@localhost:5432/prenews

# Redis (for BullMQ job queue + caching)
REDIS_URL=redis://localhost:6379
# For Upstash + BullMQ, use the Redis TCP URL (rediss://...), not the REST URL (https://...).

# Azure OpenAI — Text (article generation + enrichment)
AZURE_OPENAI_ENDPOINT=https://your-text-resource.openai.azure.com
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Azure OpenAI — Image (separate resource/key if different from text)
AZURE_OPENAI_IMAGE_ENDPOINT=https://your-image-resource.openai.azure.com
AZURE_OPENAI_IMAGE_API_KEY=
AZURE_OPENAI_IMAGE_DEPLOYMENT=gpt-image-1-5
AZURE_OPENAI_IMAGE_API_VERSION=2024-12-01-preview

# Vercel Blob (image storage — get from Vercel dashboard → Storage)
BLOB_READ_WRITE_TOKEN=

# Polymarket API (free, no key required)
POLYMARKET_API_URL=https://gamma-api.polymarket.com

# Kalshi API (free for reads, key optional but recommended)
KALSHI_API_URL=https://trading-api.kalshi.com/trade-api/v2
KALSHI_API_KEY=

# App
NEXT_PUBLIC_APP_URL=https://prenews.news
NEXT_PUBLIC_SITE_NAME=PreNews
NODE_ENV=development
